# Gemini CLI Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Gemini API key
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Model to use
# Options: gemini-2.5-pro, gemini-2.0-flash-exp, gemini-1.5-pro-latest, etc.
GEMINI_MODEL=gemini-2.5-pro

# Optional: Enable sandbox mode for safe execution of potentially unsafe operations
# Options: true, false, docker, podman
GEMINI_SANDBOX=false

# Optional: Enable debug mode for verbose logging
# Options: true, 1, false, 0
DEBUG=false

# Optional: Disable color output
# Set to any value to disable colors
# NO_COLOR=1

# Optional: Google Cloud configuration (if using Vertex AI)
# GOOGLE_API_KEY=your_google_api_key_here
# GOOGLE_CLOUD_PROJECT=your_project_id
# GOOGLE_CLOUD_LOCATION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json
